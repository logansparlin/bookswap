dark-blue = #1c296a
light-blue = #3a488c

* 
	font-family 'proxima-nova-alt'
	font-weight normal
	box-sizing border-box
	-webkit-font-smoothing antialiased
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)

html, body 
	height 100%
	margin 0
	padding 0
h1, h2, h3, h4, h5, h6, p, span, div, ul 
	padding 0
	margin 0

.wrapper 
	padding 0 20px
	max-width 1280px 
	margin 0 auto
	
.login--active, .register--active 
	overflow hidden

@import 'nib'
@import 'jeet'
@import 'rupture'
@import 'views/**/*.import.styl'