@import 'nib'
@import 'jeet'
@import 'rupture'

.login-wrapper
	visibility hidden
	transition all 350ms ease

#login-form
	opacity 0
	display block
	position absolute
	width 50%
	height 50%
	background white
	top 50%
	left 50%
	transform translate(-50%, -50%) scale(0.7)
	border-radius 10px
	z-index 2
	transition all 250ms ease
	.login-container
		padding 50px

.overlay 
	display block
	width 100%
	height 100%
	background rgba(0, 0, 0, 0.85)
	position fixed
	top 0px
	left 0px
	z-index 1
	opacity 0
.close-icon
	position absolute
	top 40px
	right 50px
	color white
	font-size 1.2em
	z-index 2
	cursor pointer
	opacity 0
	
.login--active .login-wrapper
	visibility visible
	#login-form
		opacity 1
		transition all 250ms ease
		transform translate(-50%, -50%) scale(1)
	.overlay
		opacity 1
	.close-icon
		opacity 1
	