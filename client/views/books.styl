@import 'jeet'
@import 'rupture'

.book-container
	padding 2em 10px
	color #333
	box-sizing border-box
	line-height 1em
	+mobile()
		col(1/2, cycle: 2)
		padding 1em 0
	+desktop()
		col(1/4, cycle: 4)
	+tablet()
		col(1/3, cycle:3)
	.book-image
		width 75%
		height 200px
		background red
		margin 0 auto
		margin-bottom 1em
	h1
		font-size 18px
		margin 0
		padding 0
	span
		font-size 12px
		padding 0
		margin 0
		font-family garamond