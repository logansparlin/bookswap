#user-header 
	width 100%
	height 75px 
	background light-blue
	color white
	margin-bottom 10px
	.user-header-container 
		height 100%
		.logo
			margin 0
			padding 0
			position absolute 
			left 20px
			top 50%
			transform translateY(-50%)
			text-transform uppercase
			font-weight bold
			font-size 1.2em
			padding 5px 10px
			border 1px solid white
			letter-spacing 0.2em
	.user-nav 
		position absolute
		right 20px
		top 50%
		transform translateY(-50%)
		.link
			display inline-block
			padding 0 5px
			font-size 14px
			cursor pointer
		.user-name
			font-weight bold 
			text-transform uppercase 
			letter-spacing 0.2em
		.settings-link
			color #eee
			font-size 16px
			user-select none

.user-settings-tab
	list-style none
	background white 
	color light-blue
	width auto
	position absolute
	top 55px
	padding 10px
	right 12px
	box-shadow 0 0 2px rgba(0, 0, 0, 0.5)
	visibility hidden
	opacity 0
	transition all 200ms ease-out
	user-select none
	&:after 
		content ''
		border-color transparent transparent white transparent
		border-style solid
		border-width 10px
		width 0
		height 0
		position absolute
		top -20px
		right 10px
	li 
		cursor pointer
	.user-logout
		font-weight bold
		letter-spacing 0.1em
		font-size 14px
		
.settings--active 
	.user-settings-tab
		top 60px
		visibility visible
		opacity 1
		transition all 200ms ease-out
	

