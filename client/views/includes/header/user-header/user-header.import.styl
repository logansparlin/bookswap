#user-header 
	width 100%
	height 75px 
	background light-blue
	color white
	margin-bottom 10px
	.user-header-container 
		height 100%
		h1
			margin 0
			padding 0
			position absolute 
			left 20px
			top 50%
			transform translateY(-50%)
	.user-nav 
		position absolute
		right 20px
		top 50%
		transform translateY(-50%)
		.link
			display inline-block
			padding 0 5px
			font-size 14px
			cursor pointer
		.user-name
			font-weight bold 
			text-transform uppercase 
			letter-spacing 0.2em
		.settings-link
			color #eee
			font-size 16px