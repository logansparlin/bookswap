.menu-icon
	position absolute
	z-index 3
	top 40px
	left 30px
	width 30px
	height 30px
	overflow hidden
	user-select none
	cursor pointer
	// border 2px solid darken(dark-blue, 30%)
	.icon-container
		width 90%
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
	.bar 
		display block
		margin 0 auto
		width 100%
		height 2px
		margin 5px 0
		background white
		
.landing-menu 
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background darken(dark-blue, 50%)
	color white
	overflow hidden
	ul
		list-style none
		color white
		text-transform uppercase
		position relative 
		top 50%
		left 20px
		transform translateY(-50%)
		letter-spacing 0.1em
		li 
			color white 
			font-weight bold
			padding-left 10px
			margin 10px 0
			cursor pointer
			box-sizing border-box
			transition all 100ms ease-out
			border-left 2px solid transparent
			&:hover 
				border-left 2px solid white
				transition all 100ms ease-out
			+above($mobile)
				&.register-offcanvas-link, &.login-offcanvas-link
					display none