@import 'nib'
@import 'jeet'
@import 'rupture'

main-color = #1d3b63

.login-wrapper
	visibility hidden
	z-index -500
	transition all 350ms ease
.register-wrapper
	visibility hidden
	z-index -500
	transition all 350ms ease

#login-form, #register-form
	opacity 0
	display block
	position absolute
	width 400px
	height auto
	background white
	top 50%
	left 50%
	transform translate(-50%, -50%) scale(0.7)
	z-index 2
	transition all 250ms ease
	padding 2em 0
	.form-container
		padding 0 50px
	input
		width 100%
		margin 20px 0
		font-size 14px
		&:first-of-type
			margin 0
	
.overlay 
	display block
	width 100%
	height 100%
	background rgba(0, 0, 0, 0.85)
	position fixed
	top 0px
	left 0px
	z-index 1
	opacity 0
.close-icon
	position absolute
	top 40px
	right 50px
	color white
	font-size 1.2em
	z-index 2
	cursor pointer
	opacity 0
input[type="submit"]
	border none
	background main-color
	width 100%
	color white
	text-transform uppercase
	height 50px
.register
	font-size 14px
	a 
		color blue
		cursor pointer

.login--active .login-wrapper
	visibility visible
	z-index 50
	#login-form
		opacity 1
		transition all 250ms ease
		transform translate(-50%, -50%) scale(1)
	.overlay
		opacity 1
	.close-icon
		opacity 1
		
.register--active .register-wrapper
	visibility visible
	z-index 50
	#register-form
		opacity 1
		transition all 250ms ease
		transform translate(-50%, -50%) scale(1)
	.overlay
		opacity 1
	.close-icon 
		opacity 1
	