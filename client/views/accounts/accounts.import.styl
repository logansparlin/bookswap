.overlay-page 
	position absolute
	width 100%
	height 100%
	background #eee
	color black 
	left 0
	top 0
	z-index 20
	visibility hidden
	opacity 0
	transition opacity 100ms ease-in-out, visibility 100ms ease-in-out
	h1 
		margin 0
		padding 5px 0
		text-align center
		font-size 1.5em
		text-transform uppercase
		color light-blue
	.accounts-container 
		width 400px
		height auto
		position absolute 
		top 50%
		left 50%
		padding 30px
		background #fff
		transform translate(-50%, -50%)
		+mobile()
			width 100%
		
.login--active, .register--active 
	.overlay-page 
		opacity 1
		transition opacity 250ms ease-in-out, visibility 250ms ease-in-out
		
.login--active 
	.login.overlay-page 
		visibility visible
.register--active 
	.register.overlay-page 
		visibility visible

// Accounts Form

.accounts-form 
	width 100%
	height 100%
	font-size 1em
	color light-blue
	letter-spacing 0.1em
	text-align center
	-webkit-appearance none
	input 
		-webkit-appearance none
		border-radius 0
	input:not([type="submit"])
		width 100%
		padding 10px 0
		margin 5px 0
		background transparent 
		border none
		outline none
		border-bottom 1px solid light-blue
		font-size 1em
		color light-blue
		letter-spacing 0.1em
		display table-row-group
	input[type="submit"]
		width 50%
		text-transform uppercase
		font-weight bold
		padding 15px 0
		letter-spacing 0.2em
		margin-top 20px
		margin-left auto
		margin-right auto
		border none
		outline none
		color white
		background light-blue
		border-radius 20px
	input.input-half 
		width 47%
		&:first-of-type
			float left
		&:nth-of-type(2)
			float right		


		
// close icon

.close-icon 
	width 20px
	height 20px
	position absolute 
	top 25px
	right 30px
	cursor pointer
	.bar 
		position absolute 
		width 100%
		height 2px
		background black
		top 50%
		transform translateY(-50%)
		transform-origin 50% 50%
		&:first-of-type 
			transform rotate(45deg)
		&:last-of-type
			transform rotate(-45deg)